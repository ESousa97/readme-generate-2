# Application
APP_NAME=ReadmeGeneration
APP_AUTHOR=Enoque Sousa
PYTHON_ENV=development
DEBUG=false

# API
PORT=8000
GEMINI_MODEL_NAME=gemini-1.5-flash-latest

# Security
# Comma-separated list of allowed origins for CORS in production.
# Example: https://readme-generate-2.onrender.com,https://example.com
CORS_ALLOWED_ORIGINS=http://127.0.0.1:8000,http://localhost:8000

# Rate limiting
RATE_LIMIT_REQUESTS=5
RATE_LIMIT_PERIOD_SECONDS=60
BLOCK_TIME_INITIAL_SECONDS=300
BLOCK_TIME_MULTIPLIER=2
MAX_BLOCK_TIME_SECONDS=14400
